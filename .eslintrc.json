{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:storybook/recommended",
        "prettier",
        "plugin:testing-library/react"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {},
            {
                "usePrettierrc": true
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0
    },
    "plugins": ["prettier", "react", "react-hooks", "import", "testing-library", "jest"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": "false",
        "babelOptions": {
            "configFile": "./.babelrc"
        },
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "requireConfigFile": "false",
        "babelOptions": {
            "configFile": "./.babelrc"
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": ["**/*.stories.*"],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        }
    ]
}
